---
import { t } from 'i18next';
import { Trans } from "astro-i18next/components";
import { Image } from "astro:assets"
import uasImg from "@assets/images/uas.png";
---

<section
	data-testid="education"
	id="education"
	class="mb-10 flex flex-col items-center justify-center lg:mb-0 h-auto lg:flex-row"
>
    <div class="mb-10 flex w-full flex-col items-center justify-center lg:hidden">
        <h2 class="font-monospace text-2xl text-orange lg:text-4xl">{t("education.title")}</h2>
        <span class="mb-6 ml-2 h-1 w-10 bg-orange"></span>
    </div>
    <div class="w-full flex text-center text-black dark:text-white lg:w-1/2 items-center">
        <Image
            src={uasImg}
            alt="Universidad Autónoma de Sinaloa"
            format="png"
            width={100}
            height={100}
            loading="eager"
            class="mr-4"
        />
        <p class="mb-2">
            <Trans i18nKey="education.description">
                I have a Bachelor's degree in Computer Science from the <a href="https://www.uas.edu.mx" target="_blank" rel="noopener" class="text-orange"
                    >Universidad Autónoma de Sinaloa</a
                >
            </Trans>
        </p>
    </div>
	<div class="mb-10 hidden w-full flex-col items-center justify-center lg:mb-0 lg:w-1/2 lg:flex">
		<h2 class="font-monospace text-2xl text-orange lg:text-4xl">{t("education.title")}</h2>
		<span class="mb-6 ml-2 h-1 w-10 bg-orange"></span>
	</div>

</section>
